<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>


    <!--separator line style-->
    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="FAB">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:background">@drawable/fab</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>

    </style>

    <style name="FAB_Sub">
        <item name="android:background">@drawable/fab</item>
        <item name="android:layout_width">@dimen/fab_sub_size</item>
        <item name="android:layout_height">@dimen/fab_sub_size</item>
    </style>

    <style name="TextView_Shadow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/text_view_shadow</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:padding">@dimen/fab_item_padding</item>
        <item name="android:textColor">@color/fab_item_text</item>
    </style>

    <style name="RadioButton_Menu">
        <item name="android:drawablePadding">@dimen/radio_drawable_padding</item>
        <item name="android:paddingLeft">@dimen/menu_margin_left</item>
        <item name="android:paddingRight">@dimen/menu_margin_left</item>
        <item name="android:drawableRight">@drawable/menu_arrow_bg</item>
        <item name="android:drawableEnd">@drawable/menu_arrow_bg</item>>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/menu_item_text</item>
        <item name="android:background">@drawable/menu_item_bg</item>
    </style>


    <style name="Button_Menu">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">@dimen/radio_drawable_padding</item>
        <item name="android:paddingLeft">@dimen/menu_margin_left</item>
        <item name="android:layout_height">@dimen/menu_setting_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/menu_item_text</item>
    </style>

</resources>
