<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xidian.yetwish.reading">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.ReadingActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" />

        <activity
            android:name=".ui.main.ReadActivity"
            android:label="@string/read_title"
            android:launchMode="singleTask" />

        <activity
            android:name=".ui.main.NoteActivity"
            android:label="@string/note_title"
            android:launchMode="singleTask" />

        <activity
            android:name=".ui.add_book.auto_search.AutoSearchActivity"
            android:label="@string/search_title" />

        <activity
            android:name=".ui.add_book.file_browser.FileBrowserActivity"
            android:label="@string/explorer_title" />

        <activity
            android:name=".ui.reader.ReaderActivity"
            android:label="@string/reader_title"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />

        <activity
            android:name=".ui.note.NoteBookActivity"
            android:label="@string/note_book_title" />

        <activity android:name=".ui.note.NoteEditActivity" />

        <activity
            android:name=".ui.note.DemoActivity"
            android:label="@string/note_create" />

    </application>

</manifest>